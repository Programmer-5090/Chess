{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Configure CMake for Debug build (automatically downloads SDL2 if needed)",
            "problemMatcher": []
        },
        {
            "label": "CMake: Configure Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-B",
                "build",
                "-DCMAKE_BUILD_TYPE=Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Configure CMake for Release build",
            "problemMatcher": []
        },
        {
            "label": "CMake: Build Debug",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build Chess project using CMake (Debug)",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": "CMake: Configure Debug"
        },
        {
            "label": "CMake: Build Release",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--config",
                "Release"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Build Chess project using CMake (Release)",
            "problemMatcher": [
                "$gcc"
            ],
            "dependsOn": "CMake: Configure Release"
        },
        {
            "label": "CMake: Clean",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "--target",
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "detail": "Clean CMake build files",
            "problemMatcher": []
        },
        {
            "label": "Run Chess Game",
            "type": "shell",
            "command": ".\\chess_game.exe",
            "options": {
                "cwd": "${workspaceFolder}\\build\\bin\\Debug"
            },
            "group": "test",
            "detail": "Run the Chess game executable",
            "dependsOn": "CMake: Build Debug",
            "problemMatcher": []
        },
        {
            "label": "Build and Run",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: Build Debug",
                "Run Chess Game"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "detail": "Build and run the Chess game"
        },
        {
            "label": "g++ Build Project (Windows) - Legacy",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-fdiagnostics-color=always",
                "-Wall",
                "-Wextra",
                "-Wno-unused-function",
                "-Wno-unused-label",
                "-Wno-unused-parameter",
                "-Wno-unused-variable",
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/pieces/*.cpp",
                "-I${workspaceFolder}/include",
                "-IC:/msys64/ucrt64/include/SDL2",
                "-LC:/msys64/ucrt64/lib",
                "-o",
                "${workspaceFolder}/output/chess_game.exe",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lopengl32",
                "-lglu32"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Legacy: Builds the entire Chess project using g++ for Windows with SDL2."
        },
        {
            "label": "MSVC Build Project (Windows) - Legacy",
            "type": "shell",
            "command": "cl",
            "args": [
                "/std:c++17",
                "/EHsc",
                "/W3",
                "/Zi",
                "/I${workspaceFolder}/include",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/src/pieces/*.cpp",
                "/Fe:${workspaceFolder}/output/chess_game.exe",
                "/link",
                "SDL2.lib",
                "SDL2main.lib",
                "SDL2_image.lib",
                "SDL2_ttf.lib",
                "opengl32.lib",
                "glu32.lib"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Legacy: Builds the entire Chess project using MSVC for Windows with SDL2."
        }
    ]
}